<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:weightSum="5.5"
    android:background="@color/abc_input_method_navigation_guard">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/ll_editText"
        android:orientation="horizontal"
        android:weightSum="1">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@android:color/transparent"
            android:focusable="true"
            android:focusableInTouchMode="true">
        </LinearLayout>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:inputType="numberDecimal"
            android:ems="10"
            android:textSize="50dp"
            android:gravity="right"
            android:textColor="#FFD8D5D5"
            android:id="@+id/editWindow"
            android:layout_weight="1"
            android:layout_gravity="bottom"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:id="@+id/ll_back"
        android:orientation="horizontal"
        android:weightSum="4">

        <Button
            android:layout_margin="2.5dp"
            android:textStyle="bold"
            android:text="CE"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/b_CE"
            android:textColor="#FFD8D5D5"
            android:textSize="20dp"
            android:layout_weight="1"
            android:background="@color/button_material_dark"/>

        <Button
            android:layout_margin="2.5dp"
            android:textStyle="bold"
            android:text="!"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/b_factorial"
            android:layout_weight="1"
            android:textSize="20dp"
            android:textColor="#FFD8D5D5"
            android:background="@color/button_material_dark"/>

        <Button
            android:layout_margin="2.5dp"
            android:textStyle="bold"
            android:text="^"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/b_power"
            android:layout_weight="1"
            android:textColor="#FFD8D5D5"
            android:background="@color/button_material_dark"/>

        <ImageButton
            android:layout_margin="2.5dp"
            android:textStyle="bold"
            android:src="@drawable/ic_backspace_white_24dp"
            android:text="Clear"
            android:layout_width="64dp"
            android:layout_height="match_parent"
            android:id="@+id/b_back"
            android:layout_weight="1"
            android:textColor="#FFD8D5D5"
            android:background="@color/button_material_dark"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/ll_num1"
        android:weightSum="4"
        android:orientation="horizontal">
        <Button
            android:layout_margin="2.5dp"
            android:textStyle="bold"
            android:text="9"
            android:textSize="30dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/b_9"
            android:textColor="#FFD8D5D5"
            android:layout_weight="1"
            android:background="@color/bright_foreground_disabled_material_dark" />

        <Button
            android:layout_margin="2.5dp"
            android:textStyle="bold"
            android:text="8"
            android:textSize="30dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/b_8"
            android:textColor="#FFD8D5D5"
            android:layout_weight="1"
            android:background="@color/bright_foreground_disabled_material_dark" />

        <Button
            android:layout_margin="2.5dp"
            android:textStyle="bold"
            android:text="7"
            android:textSize="30dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/b_7"
            android:textColor="#FFD8D5D5"
            android:layout_weight="1"
            android:background="@color/bright_foreground_disabled_material_dark"/>

        <Button
            android:layout_margin="2.5dp"
            android:textStyle="bold"
            android:text="/"
            android:textSize="30dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/b_divide"
            android:layout_weight="1"
            android:textColor="#FFD8D5D5"
            android:background="@color/button_material_dark"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/ll_num2"
        android:weightSum="4"
        android:orientation="horizontal"
        >

        <Button
            android:layout_margin="2.5dp"
            android:textStyle="bold"
            android:text="6"
            android:textSize="30dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/b_6"
            android:textColor="#FFD8D5D5"
            android:layout_weight="1"
            android:background="@color/bright_foreground_disabled_material_dark"/>

        <Button
            android:layout_margin="2.5dp"
            android:textStyle="bold"
            android:text="5"
            android:textSize="30dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/b_5"
            android:textColor="#FFD8D5D5"
            android:layout_weight="1"
            android:background="@color/bright_foreground_disabled_material_dark"/>

        <Button
            android:layout_margin="2.5dp"
            android:textStyle="bold"
            android:text="4"
            android:textSize="30dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/b_4"
            android:textColor="#FFD8D5D5"
            android:layout_weight="1"
            android:background="@color/bright_foreground_disabled_material_dark"/>

        <Button
            android:layout_margin="2.5dp"
            android:textStyle="bold"
            android:text="*"
            android:textSize="30dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/b_multiply"
            android:layout_weight="1"
            android:textColor="#FFD8D5D5"
            android:background="@color/button_material_dark"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/ll_num3"
        android:weightSum="4"
        android:orientation="horizontal">
        <Button
            android:layout_margin="2.5dp"
            android:textStyle="bold"
            android:text="3"
            android:textSize="30dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/b_3"
            android:textColor="#FFD8D5D5"
            android:layout_weight="1"
            android:background="@color/bright_foreground_disabled_material_dark"/>

        <Button
            android:layout_margin="2.5dp"
            android:textStyle="bold"
            android:text="2"
            android:textSize="30dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/b_2"
            android:textColor="#FFD8D5D5"
            android:layout_weight="1"
            android:background="@color/bright_foreground_disabled_material_dark"/>

        <Button
            android:layout_margin="2.5dp"
            android:textStyle="bold"
            android:text="1"
            android:textSize="30dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/b_1"
            android:textColor="#FFD8D5D5"
            android:layout_weight="1"
            android:background="@color/bright_foreground_disabled_material_dark" />

        <Button
            android:layout_margin="2.5dp"
            android:textStyle="bold"
            android:text="-"
            android:textSize="30dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/b_minus"
            android:layout_weight="1"
            android:textColor="#FFD8D5D5"
            android:background="@color/button_material_dark"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/ll_num4"
        android:weightSum="4"
        android:orientation="horizontal">

        <Button
            android:layout_margin="2.5dp"
            android:textStyle="bold"
            android:text="."
            android:textSize="30dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/b_decimal"
            android:textColor="#FFD8D5D5"
            android:layout_weight="1"
            android:background="@color/button_material_dark"/>

        <Button
            android:layout_margin="2.5dp"
            android:textStyle="bold"
            android:text="0"
            android:textSize="30dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/b_0"
            android:textColor="#FFD8D5D5"
            android:layout_weight="1"
            android:background="@color/bright_foreground_disabled_material_dark"/>

        <Button
            android:layout_margin="2.5dp"
            android:textStyle="bold"
            android:text="="
            android:textSize="30dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/b_equals"
            android:textColor="#FFD8D5D5"
            android:layout_weight="1"
            android:background="@color/button_material_dark"/>/>

        <Button
            android:layout_margin="2.5dp"
            android:textStyle="bold"
            android:text="+"
            android:textSize="30dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/b_plus"
            android:layout_weight="1"
            android:textColor="#FFD8D5D5"
            android:background="@color/button_material_dark"/>
    </LinearLayout>

</LinearLayout>